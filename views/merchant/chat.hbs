                            <a href="javascript:void(0);" class="btn btn-outline-secondary"><i class="fa fa-camera"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-primary"><i class="fa fa-image"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-info"><i class="fa fa-cogs"></i></a>
                            <a href="javascript:void(0);" class="btn btn-outline-warning"><i class="fa fa-question"></i></a>
                        </div> }}
                        </div>
                    </div>
                    {{! Message }}
                    <div class="chat-history">
                        <ul id="chatPanel" class="m-b-0">
                            
                            {{#each messagesHistory}}
                                {{log this.flag}}
                                {{#if this.flag}}
                                    <li class="clearfix" >
                                        <div class="message other-message float-right">
                                            {{this.message}}
                                        </div>
                                    </li>
                                {{else}}
                                    {{log "else"}}
                                    <li class="clearfix">
                                        <div class="message my-message float-left">
                                            {{this.message}}
                                        </div>
                                    </li>
                                {{/if}}
                            {{/each}}
                        </ul>
                    </div>
                    <div class="chat-message clearfix">
                        <div class="input-group mb-0 d-flex justify-content-center align-items-center">
                            <input id="input" type="text" class="form-control" placeholder="Enter text here..." />
                            <div class="input-group-prepend mx-2">
                                <button id="sendBtn" class="input-group-text"><i class="fa fa-send" style="color:#f59359"></i></button>
                            </div>
                        </div>
                        <input type="text" class="form-control" placeholder="Enter text here...">                                    
