<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<input id="merchantId" name="random" type="hidden" value={{merchantId}}>
<input id="receiverId" name="random" type="hidden" value={{userId}}>
