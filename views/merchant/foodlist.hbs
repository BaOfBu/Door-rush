{{#section 'js'}}
    <script src="/static/js/merchant/foodlist/index.js"></script>
{{/section}}

{{#section 'css'}}
    <link rel="stylesheet" href="/static/css/merchant/foodlist.css" />
{{/section}}

<div class="custom-container">
    <div class="top d-flex align-items-center justify-content-between mb-3">
        <h3>Danh sách sản phẩm</h3>
        <div class="btn-function">
            <button type="button" id="addProductBtn" class="btn custom-button" style="margin-right: 10px;">+ Sản phẩm</button>
            <button type="button" id="addCategoryBtn" class="btn custom-button">+ Danh mục</button>
            <div id="modalCategory" class="modal">
                <div class="modal-content">
                    <div class="close d-flex justify-content-end align-items-center" id="closeCategory">
                        <i class="bi bi-arrow-bar-left"></i>
                        <span>Quay lại</span>
                    </div>
                    <h2 class="d-flex justify-content-center">Quản lý danh mục</h2>
                    <ul id="categoryList" class="category-list list-group mb-3">
                        <!-- Danh sách category sẽ được hiển thị ở đây -->
                    </ul>
                    <div class="d-flex">
                        <input type="text" class="form-control" id="categoryInput" placeholder="Nhập category...">
                        <button type="button" id="addCategory" class="btn custom-button">Thêm</button>
                    </div>
                </div>
            </div>

            <div id="modalProduct" class="modal">
                <div class="modal-content">
                    <h2 class="d-flex justify-content-center">Thêm sản phẩm mới</h2>

                    <div class="d-flex">
                        <div class="col-md-4">
                            <img src="/static/images/user/shop/alter-image.png" alt="">
                        </div>
                        <div class="col-md-8 primary">
                            <div class="w-100">
                                <label for="productName" class="form-label">Tên sản phẩm</label>
                                <input type="text" class="form-control" id="productName" placeholder="Cơm tấm sườn, bì, chả" aria-describedby="checkValidationName">
                                <div class="has-validation">
                                    <div id="checkValidationName" class="invalid-feedback">
                                        Vui lòng nhập tên sản phẩm không quá 50 kí tự.
                                    </div>
                                </div>
                            </div>
                            <div class="w-100">
                                <label for="selectType">Các lựa chọn</label>
                                <div class="dropdown">
                                    <div class="has-validation">
                                        <button class="form-control dropdown-toggle custom-filter d-flex justify-content-start align-items-center is-invalid mt-1" aria-describedby="checkValidationItem" type="button" id="dropdownItem" data-toggle="dropdown" aria-expanded="false">
                                        Hãy thêm các lựa chọn cho sản phẩm của bạn
                                        </button>
                                        <input id="selectedItem" name="type" type="hidden">
                                        <ul class="custom-dropdown-menu dropdown-menu dropdown-category" aria-labelledby="dropdownItem">
                                            <li><a class="dropdown-item" href="#">
                                                <i class="bi bi-plus"></i>
                                                <span>Thêm lựa chọn</span>
                                            </a></li>
                                        </ul>
                                        <div id="checkValidationItem" class="invalid-feedback">
                                        Vui lòng thêm ít nhất một lựa chọn và lựa chọn không được quá 50 kí tự.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="mb-1 d-flex justify-content-between">
                            <div class="w-100">
                                <label for="selectType">Danh mục</label>
                                <div class="dropdown">
                                    <div class="has-validation">
                                        <button class="form-control dropdown-toggle custom-filter d-flex justify-content-start align-items-center is-invalid mt-2" aria-describedby="checkValidationCategories" type="button" id="dropdownCategory" data-toggle="dropdown" aria-expanded="false">
                                        Chọn các danh mục
                                        </button>
                                        <input id="selectedCategory" name="type" type="hidden">
                                        <ul class="custom-dropdown-menu dropdown-menu dropdown-category" aria-labelledby="dropdownCategory">
                                            {{#each this.categories}}
                                                <li>
                                                    <div class="custom-checkbox">
                                                        <input type="checkbox" class="custom-control-input category-checkbox" id="{{name}}" data-value="{{name}}">
                                                        <label class="dropdown-item category" for="{{name}}">{{name}}</label>
                                                    </div>
                                                </li>
                                            {{/each}}
                                        </ul>
                                        <div id="checkValidationCategories" class="invalid-feedback">
                                        Vui lòng chọn ít nhất một danh mục, nhiều nhất là ba.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex">
                            <div class="">
                                <label for="price" class="form-label">Giá sản phẩm</label>
                                <input type="text" class="form-control" id="price" placeholder="100" aria-describedby="checkValidationPrice">
                                <div class="has-validation">
                                    <div id="checkValidationPrice" class="invalid-feedback">
                                        Không được để trống mục này.
                                    </div>
                                </div>
                            </div>
                            <div class="quantity">
                                <label for="quantity" class="form-label">Số lượng</label>
                                <input type="text" class="form-control" id="quantity" placeholder="100" aria-describedby="checkValidationQuantity">
                                <div class="has-validation">
                                    <div id="checkValidationQuantity" class="invalid-feedback">
                                        Không được để trống mục này.
                                    </div>
                                </div>
                            </div>
                            <div class="status">
                                <label for="" class="form-label">Trạng thái</label>
                                <div class="dropdown">
                                    <button class="form-control dropdown-toggle custom-filter d-flex justify-content-start align-items-center" aria-describedby="checkValidationCategories" type="button" id="statusItem" data-toggle="dropdown" aria-expanded="false">
                                    Hết hàng
                                    </button>

                                    <ul class="dropdown-menu" aria-labelledby="statusItem">
                                        <li><a class="dropdown-item" href="#">Còn hàng</a></li>
                                        <li><a class="dropdown-item active" href="#">Hết hàng</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="mt-1">
                            <label for="description" class="form-label">Thông tin sản phẩm</label>
                            <textarea textarea class="form-control" aria-label="With textarea" id="description"></textarea>
                        </div>
                    </div>

                    <div class="d-flex mt-3 justify-content-end">
                        <button type="button" id="closeProduct" class="btn custom-button">Quay lại</button>
                        <button type="button" id="addCategory" class="btn custom-button">Thêm</button>
                    </div>
                </div>
            </div>

            <div id="myModal" class="modal">
                <div class="modal-content">
                    <div class="close d-flex justify-content-end align-items-center">
                        <i class="bi bi-arrow-bar-left"></i>
                        <span>Quay lại</span>
                    </div>
                    <h2 class="d-flex justify-content-center">Quản lý danh mục</h2>
                    <ul id="categoryList" class="category-list list-group mb-3">
                        <!-- Danh sách category sẽ được hiển thị ở đây -->
                    </ul>
                    <div class="d-flex">
                        <input type="text" class="form-control" id="categoryInput" placeholder="Nhập category...">
                        <button type="button" id="addCategory" class="btn custom-button">Thêm</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="menu-category-bar mb-3 items">
        <ul class="nav nav-pills nav-fill align-items-center">
            <li class="nav-item">
                <i class="bi bi-chevron-left"></i>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><span>Item 1</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><span>Item 2</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><span>Item 3</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><span>Item 4</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#"><span>Item 5</span></a>
            </li>
            <li class="nav-item">
                <i class="bi bi-chevron-right"></i>
            </li>
        </ul>
    </div>
    
    {{#if empty}}
        <div class="card">
            <div class="card-footer text-muted" id="none">
                Không tìm thấy đơn hàng phù hợp nào. Bạn vui lòng kiểm tra và thử lại nhé. 
            </div>   
        </div> 
            
    {{else}}
        {{!-- {{#each orders}} --}}
            <div class="card border mb-3">
                <div class="card-body d-flex justify-content-between">
                    <div class="col-md-2">
                        <img src="/static/images/user/shop/alter-image.png" class="h-100" alt="">
                    </div>
                    <div class="row col-md-10">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row justify-content-lg-start">
                                <h4>Tên sản phẩm</h4>
                                {{!-- <span>#{{this.orderId}}</span> --}}
                            </div>
                            <div class="d-flex flex-row">
                                <h5>Giá tiền: </h5>
                                <h5>1.000.000đ</h5>
                                {{!-- <span>#{{this.orderId}}</span> --}}
                            </div>
                            {{!-- <span>Giá tiền</span> --}}
                            {{!-- <span>{{this.timeOrder}}</span> --}}
                        </div>

                        <div class="d-flex flex-column justify-content-between">
                            <div class="d-flex justify-content-between mb-2">
                                {{!-- <div>{{this.username}}</div> --}}
                                <div class="d-flex flex-row">
                                    <span>Danh mục: </span>
                                    <span>Phở</span>
                                    {{!-- <span>#{{this.orderId}}</span> --}}
                                </div>
                                <div class="d-flex flex-row">
                                    <span>Số lượng: </span>
                                    <span>100</span>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                {{!-- <p class="text-truncate mb-4 mb-md-0"> --}}
                                <div class="event">
                                    <i class="bi bi-star-fill"></i>
                                    <span>4.5{{this.rating}}</span>
                                </div>
                                {{!-- <a href="/merchant/orders/{{this.orderId}}" id="view-more" class="small">Xem chi tiết</a> --}}
                            </div>

                            <div class="border-top mt-3">
                            <div class="d-flex justify-content-between align-item-center mt-1">
                                <div class="text-muted small my-auto text-center">
                                    <span>Trạng thái: </span>
                                    <span>{{#if (equal status 'Lịch sử')}}{{statusFilter}}{{else}}Còn hàng{{status}}{{/if}}</span>
                                </div>
                                
                                <div class="btn-function">
                                    <button type="button" class="btn custom-button" id="viewProductBtn">Xem chi tiết</button>
                                </div>
                                <input type="hidden" id="orderId" value="{{orderId}}">
                            </div>
                        </div>
                        </div>
                        
                        <div id="modalProductDetail" class="modal">
                            <div class="modal-content">
                                <h2 class="d-flex justify-content-center">Quản lý sản phẩm</h2>

                                <div class="d-flex">
                                    <div class="col-md-4">
                                        <img src="/static/images/user/shop/alter-image.png" alt="">
                                    </div>
                                    <div class="col-md-8 primary">
                                        <div class="w-100">
                                            <label for="productName" class="form-label">Tên sản phẩm</label>
                                            <input type="text" class="form-control" id="productName" value="Cơm tấm sườn, bì chả" readonly>
                                        </div>
                                        <div class="w-100">
                                            <label for="selectType">Các lựa chọn</label>
                                            <div class="dropdown">
                                                <div class="has-validation">
                                                    <button class="form-control dropdown-toggle custom-filter d-flex justify-content-start align-items-center mt-1" aria-describedby="checkValidationItem" type="button" id="dropdownItem" data-toggle="dropdown" aria-expanded="false">
                                                    Hãy thêm các lựa chọn cho sản phẩm của bạn (nếu muốn)
                                                    </button>
                                                    <input id="selectedItem" name="type" type="hidden">
                                                    <ul class="custom-dropdown-menu dropdown-menu dropdown-category" aria-labelledby="dropdownItem">
                                                        <li><a class="dropdown-item" href="#">
                                                            <i class="bi bi-plus"></i>
                                                            <span>Thêm lựa chọn</span>
                                                        </a></li>
                                                    </ul>
                                                    <div id="checkValidationItem" class="invalid-feedback">
                                                    Vui lòng thêm ít nhất một lựa chọn và lựa chọn không được quá 50 kí tự.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="mb-1 d-flex justify-content-between">
                                        <div class="w-100">
                                            <label for="selectType">Danh mục</label>
                                            <div class="dropdown">
                                                <div class="has-validation">
                                                    <button class="form-control dropdown-toggle custom-filter d-flex justify-content-start align-items-center mt-2" aria-describedby="checkValidationCategories" type="button" id="dropdownCategory" data-toggle="dropdown" aria-expanded="false">
                                                    Chọn các danh mục
                                                    </button>
                                                    <input id="selectedCategory" name="type" type="hidden">
                                                    <ul class="custom-dropdown-menu dropdown-menu dropdown-category" aria-labelledby="dropdownCategory">
                                                        {{#each this.categories}}
                                                            <li>
                                                                <div class="custom-checkbox">
                                                                    <input type="checkbox" class="custom-control-input category-checkbox" id="{{name}}" data-value="{{name}}">
                                                                    <label class="dropdown-item category" for="{{name}}">{{name}}</label>
                                                                </div>
                                                            </li>
                                                        {{/each}}
                                                    </ul>
                                                    <div id="checkValidationCategories" class="invalid-feedback">
                                                    Vui lòng chọn ít nhất một danh mục, nhiều nhất là ba.
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex">
                                        <div class="">
                                            <label for="price" class="form-label">Giá sản phẩm</label>
                                            <input type="text" class="form-control" id="price" placeholder="100" aria-describedby="checkValidationPrice">
                                            <div class="has-validation">
                                                <div id="checkValidationPrice" class="invalid-feedback">
                                                    Không được để trống mục này.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="quantity">
                                            <label for="quantity" class="form-label">Số lượng</label>
                                            <input type="text" class="form-control" id="quantity" placeholder="100" aria-describedby="checkValidationQuantity">
                                            <div class="has-validation">
                                                <div id="checkValidationQuantity" class="invalid-feedback">
                                                    Không được để trống mục này.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="status">
                                            <label for="" class="form-label">Trạng thái</label>
                                            <div class="dropdown">
                                                <button class="form-control dropdown-toggle custom-filter d-flex justify-content-start align-items-center" aria-describedby="checkValidationCategories" type="button" id="statusItem" data-toggle="dropdown" aria-expanded="false">
                                                Hết hàng
                                                </button>

                                                <ul class="dropdown-menu" aria-labelledby="statusItem">
                                                    <li><a class="dropdown-item" href="#">Còn hàng</a></li>
                                                    <li><a class="dropdown-item active" href="#">Hết hàng</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mt-1">
                                        <label for="description" class="form-label">Thông tin sản phẩm</label>
                                        <textarea textarea class="form-control" aria-label="With textarea" id="description"></textarea>
                                    </div>
                                </div>

                                <div class="d-flex mt-3 justify-content-end">
                                    <button type="button" id="closeProductDetail" class="btn custom-button" style="margin-right: 10px">Quay lại</button>
                                    <button type="button" id="recommendProduct" class="btn custom-button" style="margin-right: 10px">Đề xuất</button>
                                    <button type="button" id="deleteProduct" class="btn custom-button" style="margin-right: 10px">Xóa bỏ</button>
                                    <button type="button" id="updateProduct" class="btn custom-button">Thay đổi</button>
                                </div>
                            </div>
                        </div>

                        
                    </div>
                </div>
            </div>
        {{!-- {{/each}} --}}
        <nav aria-label="Page navigation example" class="justify-content-center mt-5" id="pagination">
            <ul class="pagination justify-content-center">
                {{#if this.isFirstPage}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Trang trước</a>
                    </li>
                {{else}}
                    <li class="page-item">
                        <a class="page-link" href="#" id="previousPage" onclick="renderPreviousPage()">Trang trước</a>
                    </li>
                {{/if}}

                {{#each this.pageNumbers}}
                    {{#if isActive}}
                    <li class="page-item active" aria-current="page">
                        <a class="page-link" href="#">{{value}}</a>
                    </li>
                    {{else}}
                    <li class="page-item">
                        {{#if (equal status 'Lịch sử')}}
                            <a class="page-link" href="/merchant/orders?optional=history&status={{statusFilter}}&startDate={{startDate}}&endDate={{endDate}}&page={{value}}">{{value}}</a>
                        {{else}}
                            <a class="page-link" href="{{#if (equal value '..')}}#pagination{{else}}/merchant/orders?optional={{statusFilter}}&page={{value}}{{/if}}">{{value}}</a>
                        {{/if}}
                    </li>
                    {{/if}}
                {{/each}}

                {{#if this.isLastPage}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Trang sau</a>
                    </li>
                {{else}}
                    <li class="page-item">
                        <a class="page-link" href="#" id="nextPage" onclick="renderNextPage()">Trang sau</a>
                    </li>
                {{/if}}
            </ul>
        </nav>
    {{/if}}
</div>