{{#section "js"}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/js/fileinput.min.js"></script>
    <script src="/static/js/merchant/home/index.js"></script>
{{/section}}
{{#section "css"}}
    <link rel="stylesheet" href="/static/css/merchant/home.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.5.2/css/fileinput.min.css">
{{/section}}
<div class="custom-container">
    <div class="home-container container">
        <div class="title p-2"> Danh sách cần làm</div>
        <div class="row gy-4">
            <div class="col-sm-4 col-1 d-flex flex-column align-items-center text-center">
                <div class="col-6 col-sm-6 number-styling">{{this.waitingOrder}}</div>
                <div class="w-100 d-none d-md-block"></div>
                <div class="col-6 col-sm-6 number-title-styling">Đang chờ</div>
            </div>
            <div class="col-sm-4 col-1 d-flex flex-column align-items-center text-center">
                <div class="col-6 col-sm-6 number-styling">{{this.preparingOrder}}</div>
                <div class="w-100 d-none d-md-block"></div>
                <div class="col-6 col-sm-6 number-title-styling">Đang chuẩn bị</div>
            </div>
            <div class="col-sm-4 col-1 d-flex flex-column align-items-center text-center">
                <div class="col-6 col-sm-6 number-styling">{{this.deliveringOrder}}</div>
                <div class="w-100 d-none d-md-block"></div>
                <div class="col-6 col-sm-6 number-title-styling">Đang giao</div>
            </div>
            <div class="col-sm-4 col-1 d-flex flex-column align-items-center text-center">
                <div class="col-6 col-sm-6 number-styling">{{this.finishOrder}}</div>
                <div class="w-100 d-none d-md-block"></div>
                <div class="col-6 col-sm-6 number-title-styling">Hoàn thành</div>
            </div>
            <div class="col-sm-4 col-1 d-flex flex-column align-items-center text-center">
                <div class="col-6 col-sm-6 number-styling">{{this.cancelOrder}}</div>
                <div class="w-100 d-none d-md-block"></div>
                <div class="col-6 col-sm-6 number-title-styling">Đơn hủy</div>
            </div>
            <div class="col-sm-4 col-1 d-flex flex-column align-items-center text-center">
                <div class="col-6 col-sm-6 number-styling">0</div>
                <div class="w-100 d-none d-md-block"></div>
                <div class="col-6 col-sm-6 number-title-styling">Hết hàng</div>
            </div>
        </div>
    </div>
    <div class="seperator"></div>
    <div class="information-container container pt-4">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-sm-4 d-flex flex-column justify-content-center align-items-center">
                {{#if authUser.image}}
                    <img src="{{authUser.image}}" alt="image-shop" style="max-height: 200px;">
                {{else}}
                    <img src="/static/images/user/search/default-image-shop.png" alt="image-shop">
                {{/if}}
                <form id="imageForm" action="" method="post" class="d-flex justify-content-center align-items-center">
                    <div class="d-flex flex-lg-column justify-content-center">
                        <div class="form-group mt-2 mb-2">
                            {{!-- <label for="fuMain" style="width: 30%;">Cập nhật</label> --}}
                            <input type="file" id="fuMain" name="image">
                        </div>
                        
                        <div class="d-flex justify-content-center mb-4">
                            <button type="submit" class="btn custom-button" id="updateButton">
                                <i class="bi bi-floppy-fill"></i>
                                <span>Cập nhật thông tin</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-sm-7">
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    Tên nhà hàng/ quán ăn
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.name}}
                    </div>
                </div>
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    Tên người đại diện
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.representative}}
                    </div>
                </div>
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    CCCD người đại diện
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.cccd}}
                    </div>
                </div>
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    Email
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.email}}
                    </div>
                </div>
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    SĐT
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.phone}}
                    </div>
                </div>
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    Địa chỉ kinh doanh
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.address}}
                    </div>
                </div>
                <div class="row mb-3 d-flex align-items-center">
                    <div class="col-md-4 information-title align-middle">
                    Loại kinh doanh
                    </div>
                    <div class="col-md-8 merchant-information rounded" >
                    {{authUser.category}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
