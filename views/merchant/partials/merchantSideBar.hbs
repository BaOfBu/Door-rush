<div class="sidebar">
    <div class="shop-name mt-5">
        <img src="/static/images/user/search/default-image-shop.png" alt="image-shop">
        <h4 class="mt-3 sidebar-item-text">Tên cửa hàng</h4>
    </div>
    <div>
        <div class="sidebar-list-item">
            <a href="/merchant" class="sidebar-item {{#if (equal type 'home')}}active{{/if}}">
                <div class="sidebar-item-icon">
                    {{#if (equal type 'home')}}
                        <img src="/static/images/merchant/home/icon-shop-filled.png" class="icon-filled" alt="shop">
                    {{else}}
                        <img src="/static/images/merchant/home/icon-shop.png" class="icon" alt="shop">
                    {{/if}}
                </div>
                <span class="sidebar-item-text">Trang chủ</span>
            </a>
            <a href="/merchant/chats" class="sidebar-item {{#if (equal type 'chats')}}active{{/if}}">
                <div class="sidebar-item-icon">
                    {{#if (equal type 'chats')}}
                        <img src="/static/images/merchant/home/icon-chat-filled.png" class="icon-filled" alt="chat">
                    {{else}}
                        <img src="/static/images/merchant/home/icon-chat.png" class="icon" alt="chat"/>
                    {{/if}}
                </div>
                <span class="sidebar-item-text">Phản hồi</span>
            </a>
            <a href="/merchant/orders" class="sidebar-item {{#if (equal type 'orders')}}active{{/if}}">
                <div class="sidebar-item-icon">
                    {{#if (equal type 'orders')}}
                        <img src="/static/images/merchant/home/icon-shopping-bag-filled.png" class="icon-filled" alt="shopping-bag"> 
                    {{else}}   
                        <img src="/static/images/merchant/home/icon-shopping-bag.png" class="icon" alt="shopping-bag"/>
                    {{/if}}        
                </div>
                <span class="sidebar-item-text">Đơn hàng</span>
            </a>
            <a href="/merchant/revenue" class="sidebar-item {{#if (equal type 'revenue')}}active{{/if}}" >
                <div class="sidebar-item-icon">
                    {{#if (equal type 'revenue')}}
                        <img src="/static/images/merchant/home/icon-revenue-filled.png" class="icon-filled" alt="revenue">
                    {{else}}
                        <img src="/static/images/merchant/home/icon-revenue.png" class="icon" alt="revenue"/>
                    {{/if}}
                </div>
                <span class="sidebar-item-text">Doanh thu</span>
            </a>
            <a href="/merchant/products" class="sidebar-item {{#if (equal type 'products')}}active{{/if}}">
                <div class="sidebar-item-icon">
                    {{#if (equal type 'products')}}
                        <img src="/static/images/merchant/home/icon-food-bar-filled.png" class="icon-filled" alt="food-bar">
                    {{else}}
                        <img src="/static/images/merchant/home/icon-food-bar.png" alt="food-bar"/>    
                    {{/if}}
                </div>
                <span class="sidebar-item-text">Sản phẩm</span>
            </a>
        </div>

    </div>
    <div class="sign-up">
        <a href="#" class="sidebar-item">
            <i class="bi bi-box-arrow-left icon-white"></i>
            <span class="sidebar-item-text">Đăng xuất</span>
        </a>
    </div>
</div>