{{#section "js"}}
    <script src="/static/js/user/foods/index.js"></script>
{{/section}}
{{#section "css"}}
    <link rel="stylesheet" href="../../static/css/user/food.css" />
{{/section}}

<form id="searchForm" action="/foods/search" method="post">
    <input type="hidden" name="keyword" id="keyword" value="" />
    <input type="hidden" name="sort" id="sort" value="" />
</form>

<main class="main-content">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between nav-bar col-sm-2">
            <a href="/" style="text-decoration: none; color: #667085">Trang chủ</a>
            <i class="bi bi-chevron-right"></i>
            <a href="#" style="text-decoration: none; color: #667085">Tìm kiếm</a>
        </div>
    </div>
    <form action="/foods" method="get">
        <div class="container col-sm-8 justify-content-start" style="padding: 0px;">
            <div class="d-flex align-items-center justify-content-start nav-bar" style="padding-left: 0px;">

                <div class="d-flex justify-content-between" style="border: 1px solid #667085; width: 60%">
                    <input
                        type="text"
                        id="searchInput"
                        style="width: 80%; height: 48px; border-style: none; margin-left: 10px;"
                        placeholder="Tìm kiếm"
                        name="search"
                    />
                    <button style="width: 10%; height: 48px;">
                        <i class="bi bi-search" style="color: #667085;"></i>
                    </button>
                </div>

                <div class="d-flex nav-bar" style="padding: 15px;">
                    <select name="sort" style="height: 50px; width: 140px; background-color: #F59359; margin-left: 10px;">
                        <option value="acs">Tăng dần</option>
                        <option value="decs">Giảm dần</option>
                    </select>
                </div>

            </div>
        </div>
    </form>
    <div class="container" style="margin-bottom: 30px;">
        <div class="row">
            <div class="col-sm-9 justify-content-start">
                <div class="container">
                    <div class="row" style="padding: 0px">
                        {{#each merchants}}
                            <div class="col-sm-3 mb-3 child">
                                <div class="card">
                                    <img class="card-img-top" src="{{this.image}}" alt="Card image cap" />
                                    <div class="card-body">
                                        <h5 class="card-title">{{this.name}}</h5>
                                        <p class="card-text">{{this.priceRange}}</p>
                                        <div class="bonus">
                                            <div class="event">
                                                <i class="bi bi-star-fill"></i>
                                                <span>{{this.rating}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <div class="col-sm-3" style="border: #000 solid; border-width: 0px 0px 0px 1px; padding: 0px 0px 0px 24px">
                <form action="/foods" method="get">
                    <div style="margin: 0px; padding: 0px; border: #F59359 solid; border-width: 0px 0px 1px 0px;">

                        <h4>Món ăn</h4>
                        <input name="category" type="checkbox" value="658070c464153bdfd0555006" />
                        Cơm<br />
                        <input name="category" type="checkbox" value="658070c464153bdfd055500e" />
                        Phở<br />
                        <input name="category" type="checkbox" value="658070c464153bdfd0555018" />
                        Cơm tấm<br />
                        <input name="category" type="checkbox" value="658070c464153bdfd0555012" />
                        Bánh canh<br />
                    </div>

                    <div style="margin: 0px; padding: 0px; border: #F59359 solid; border-width: 0px 0px 1px 0px;">
                        <h4>Thức uống</h4>
                        <input name="category" type="checkbox" value="658070c564153bdfd0555032" />
                        Trà sữa<br />
                        <input name="category" type="checkbox" value="658070c564153bdfd0555034" />
                        Trà trái cây<br />
                        <input name="category" type="checkbox" value="658070c564153bdfd0555036" />
                        Nước ngọt<br />
                    </div>
                    <div
                        style="height: 30px; width: 60px; background-color: #F59359; display: flex; align-items: center; justify-content: center; margin-top: 10px;"
                    >
                        <button type="submit" class="btn btn-default">Lọc</button>
                    </div>
                </form>

            </div>

        </div>
    </div>

</main>