<main>
  {{#if req.session.err_message}}
    alert({{req.session.err_message}});
  {{/if}}
  {{#if req.session.success_message}}
    alert({{req.session.success_message}});
  {{/if}}
  <div
    style="background-image: url('../../static/images/user/forgot-password/Signin-backround.png'); background-position: center; background-repeat: no-repeat; background-size: cover;"
  >
    <div class="container">
      <div class="row align-items-center justify-content-end">
        <div
          class="col-sm-5"
          style="background-color: #fff; margin: 100px 0px 100px 0px; border-radius: 10px;"
        >
          <div style="margin: 50px 40px 30px 7%;">
            <h3 style="color: #F59359; ">Quên mật khẩu</h3>
            <form action="/account/forgotpassword" method="post">
              <div class="form-group">
                <div class="input-group col-xs-12">
                  <input
                    type="email"
                    name="email"
                    class="form-control form-control-lg"
                    style="border-radius:8px; font-size: 16px; height:50px;margin: 20px 0 20px;"
                    placeholder="Email"
                    autofocus
                  ><br>
                </div>
              </div>
              <div class="form-group">
                <div class="ml-2">
                  <button type="submit" class="btn w-100 btn-lg btn-info" 
                  style="background-color: #F59359; color:#fff; margin: 10px 0 20px 0;">
                    Gửi
                  </button>
                </div>
              </div>
            </form>

            <p style="color: #9EA0A5;">Chưa có tài khoản?
              <a href="/account/register" style="color: #F59359; text-decoration: none;">Đăng ký
                ngay</a></p>
            {{!-- <p style="color: #9EA0A5;">Quên mật khẩu ?
              <a href="/account/register" style="color: #F59359; text-decoration: none;">Nhấn vào đây</a></p> --}}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>