{{#section "js"}}
{{/section}}
{{#section "css"}}
    <link rel="stylesheet" href="../../static/css/user/login.css">
{{/section}}

<main>
  {{#if err_message}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
      <strong>Login failed!</strong> {{err_message}}
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  {{/if}}

  <div
    style="background-image: url('../../static/images/user/account/SignInBackround.png'); background-position: center; background-repeat: no-repeat; background-size: cover;"
  >
    <div class="container">
      <div class="row align-items-center justify-content-end">
        <div
          class="col-sm-5"
          style="background-color: #fff; margin: 100px 0px 100px 0px; border-radius: 10px;"
        >
          <div style="margin: 50px 40px 30px 7%;">
            <h3 style="color: #F59359; ">Đăng nhập</h3>
            <form action="" method="post">
              <div class="form-group">
                <div class="input-group col-xs-12">
                  <input
                    type="text"
                    name="username"
                    class="form-control form-control-lg"
                    style="border-radius:8px; font-size: 16px; height:50px;margin: 10px 0 20px;"
                    placeholder="Tên đăng nhập"
                    autofocus
                  ><br>
                </div>
              </div>
              <div class="form-group">
                {{!-- <label for="password" style="color: #F59359; margin-bottom: 10px;">
                <b>Password</b></label><br> --}}
                <div class="input-group col-xs-12">
                  <input
                    type="password"
                    name="password"
                    class="form-control form-control-lg"
                    style="border-radius:8px; font-size: 16px; height:50px"
                    placeholder="Mật khẩu"
                  ><br>
                </div>
              </div>

              <div class="form-group">
                <div class="ml-2">
                  <button type="submit" class="btn w-100 btn-lg btn-info" 
                  style="background-color: #F59359; color:#fff; margin: 30px 0 20px 0;">
                    Đăng nhập ngay
                  </button>
                </div>
              </div>
            </form>

            <p style="color: #9EA0A5;">Chưa có tài khoản?
              <a href="/account/register" style="color: #F59359; text-decoration: none;">Đăng ký
                ngay</a></p>
            {{!-- <p style="color: #9EA0A5;">Quên mật khẩu ?
              <a href="/account/register" style="color: #F59359; text-decoration: none;">Nhấn vào đây</a></p> --}}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>