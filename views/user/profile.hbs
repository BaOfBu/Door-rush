                                        <label for="inputShopName">Tên nhà hàng/ quán ăn</label>
                                        <div class="has-validation">
                                            <input type="text" class="form-control" id="inputShopName" name="name" aria-describedby="checkValidationShopName" placeholder="Nhập tên nhà hàng/ quán ăn muốn đăng ký" required>
                                            <div id="checkValidationShopName" class="invalid-feedback">
