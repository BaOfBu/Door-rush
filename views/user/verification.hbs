{{#section 'js'}}
{{/section}}

{{#section 'css'}}
<link rel="stylesheet" href="../../static/css/user/register.css">
{{/section}}

<main>
  <div
    style="background-image: url('../../static/images/user/account/SignInBackround.png'); background-position: center; background-repeat: no-repeat; background-size:cover;"
  >
    <div class="container">
      <div class="d-flex flex-row flex-fill align-items-center justify-content-end">
        <div
          class="col-sm-6 d-flex justify-content-center align-items-center"
          style="background-color: #fff; height: 500px; margin: 30px 0px 100px 0px; border-radius: 8px;"
        >
          <div 
          class="d-flex flex-column flex-xl-fill align-items-center"
          style="margin: 30px 40px 30px 40px;">
            <h3 style="color: #F59359; ">Xác minh tài khoản</h3>
            <p style="color: #9EA0A5;">Vui lòng nhập mã OTP được gửi về {{this.email}} của bạn để xác minh tài khoản</p>
            <form action="" method="post" id="frmRegister">
              <div class="form-group">
                    <label for="txtOTP" style="color: #F59359; margin-bottom: 1px;">OTP Code</label>
                    <input 
                    type="text" 
                    name="OTP" 
                    id="txtOTP" 
                    class="form-control form-control-lg d-flex flex-fill"
                    style="border-radius:8px;font-size: 16px; height:50px;margin: 8px 0 15px;"
                    autofocus>
                </div>
                <div class="form-group">
                    <div class="ml-2">
                        <button type="submit" class="btn w-100 btn-lg btn-info" 
                        style="background-color: #F59359; color:#fff; margin: 8px 0 8px 0;">
                            Đăng kí ngay
                        </button>
                    </div>
                </div>
            </form>

            {{!-- <p style="color: #9EA0A5;">Đã có tài khoản?
              <a href="/account/login" style="color: #F59359; text-decoration: none;">Đăng nhập</a></p> --}}
          </div>
        </div>
      </div>
    </div>
  </div>
</main>